[Unit]
Description=VisionBox Surveillance Pipeline
After=network-online.target
Wants=network-online.target
RequiresMountsFor=/mnt/storage /tmp
StartLimitIntervalSec=300
StartLimitBurst=10

[Service]
Type=simple
User=night
WorkingDirectory=/home/night/VisionBox
ExecStart=/home/night/VisionBox/venv/bin/python3 scripts/surveillance.py --config config.yml
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
